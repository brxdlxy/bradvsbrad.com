<footer role="contentinfo" class="[ site-foot ] [ pad-top-600 pad-bottom-900 ]">
  <div class="wrapper">
    <div class="[ site-foot__inner ] [ md:box-flex space-between align-end ]">
      {% if site.shortDesc %}
        <div>
          <article class="[ site-foot__details ] [ sf-flow measure-compact ]">
            <ul class="footer-social">
            {% for social in settings.socials %}
                <li><a class="icon-links" href="{{social.url}}"> <svg class="icon icon-{{social.name}}"><use xlink:href="#icon-{{social.name}}"></use></svg></a></li>
            {% endfor %}
            </ul>
          </article>
        </div>
      {% endif %}
      <div>
        {% include "partials/components/nav.njk" %}
      </div>
    </div>
    {% if site.showThemeCredit %}
      <p class="[ site-foot__credit ] [ pad-top-900 ]">
        Powered by the <a href="https://hylia.website" rel="external">Hylia Eleventy Starter Kit v{{ pkg.version }}</a>.
      </p>
    {% endif %}
  </div>
</footer>
