<header class="[ intro ] [ pad-top-600 pad-bottom-max ]">
  <div class="[ intro__inner-wrapper inner-wrapper box-flex] [ sf-flow ]">
    {% if introPhoto %}
      <div class="[ intro__photo ] [ sf-flow ] "><img src="{{introPhoto}}" alt="" class="intro__photo__img"></div>
    {% endif %}
    <div class="intro__col">
      <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ md:text-800 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
      {% if introSummary %}
        <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
      {% endif %}
    </div>
  </div>
</header>