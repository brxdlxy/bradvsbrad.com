{% extends 'layouts/base.njk' %}
{% set pageType = 'Post' %}
{{ page | log }}
{# Intro content #}
{% set introHeading = title %}

{% block content %}
    <main id="main-content" tabindex="-1">
        <article class="[ post ] [ h-entry ]">
            <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
                <h1>{{ introHeading }}</h1>
                {{ content | safe }}
                <ul class="photos-list cards-list">
                    {% for card in cards %}
                        <li class="photos-listitem">
                            <a href="https://res.cloudinary.com/bradvsbrad/{{ card.public_id }}.{{ card.format}}" data-lightbox="sm-recent" data-title="{{ photo.title }}" class="ig-thumb-link"><img src="https://res.cloudinary.com/bradvsbrad/image/upload/w_259,c_fill,g_auto,ar_1.667/{{ card.public_id }}.{{ card.format}}" alt="{{ card.public_id }}" class="photos-thumb"></a>
                        </li>
                    </li>

                {% endfor %}

            </ul>
        </div>
    </article>
</main>
{% endblock %}

{{ content | safe }}
